@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<div class="container p-3 mt-1 border-1 border">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp Create New Category
            </a>
        </div>
    </div>
</div>

<br/><br/>

<table class="table table-bordered border bor table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>


    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group p-2" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn-sm btn"> <i class="bi bi-pencil-square"></i>&nbsp Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn-sm btn"> <i class="bi bi-trash-fill"></i>&nbsp Edit</a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

<br />
